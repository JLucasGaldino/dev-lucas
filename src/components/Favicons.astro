---
import logoPng from '~/assets/favicons/Group.png'
---

<!-- Standard PNG favicon -->
<link rel="icon" type="image/png" sizes="32x32" href={logoPng.src} />
<link rel="icon" type="image/png" sizes="48x48" href={logoPng.src} />
<link rel="icon" type="image/png" sizes="192x192" href={logoPng.src} />

<!-- Apple devices (iPhone/iPad) -->
<link rel="apple-touch-icon" sizes="180x180" href={logoPng.src} />

<!-- Fallback for old browsers -->
<link rel="shortcut icon" href={logoPng.src} />
